<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_marginEnd="5dp"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view0"
        android:layout_width="280dp"
        android:layout_height="190dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:src="@drawable/teacherteaching"
                    android:id="@+id/trending_video_thumb_recycle"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY" />

                <TextView
                    android:id="@+id/duration_of_trending_video"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:padding="1dp"
                    android:textColor="#fff"
                    android:text="--:--"
                    android:background="#000"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_marginStart="3dp"
                        android:id="@+id/trending_video_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="-------------------------"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_marginEnd="3dp"
                        android:id="@+id/trending_video_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="----"
                        android:textColor="#3bc"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_below="@+id/trending_video_title"
                        android:layout_marginStart="3dp"
                        android:id="@+id/trending_video_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="italic"
                        android:layout_alignParentStart="true"
                        android:text="By ----- ---------"
                        android:textColor="#888"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_toRightOf="@+id/trending_video_author"
                        android:layout_marginStart="8dp"
                        android:layout_below="@id/trending_video_title"
                        android:id="@+id/trending_video_upload_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--- --, ----"
                        android:textStyle="italic"
                        android:textColor="#888"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
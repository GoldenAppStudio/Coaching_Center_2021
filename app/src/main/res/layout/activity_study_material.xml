<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StudyMaterial">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/fsm_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Free Study Material Title"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fsm_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fsm_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="By Gunjan Arora 12/08/2020 06:30 AM"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="12sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/fsm_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fsm_details"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="Free Study Material Title Free Study Material Title Free Study Material Title Free Study Material TitleFree Study Material Title Free Study Material Title Free Study Material Title Free Study Material Title Free Study Material Title Free Study Material Title Free Study Material Title Free Study Material Title Free Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material Title Free Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material TitleFree Study Material Title Free Study Material Title"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fsm_content"
            android:layout_marginTop="20sp">

            <Button
                android:id="@+id/fsm_previous_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="50dp"
                android:text="Previous" />

            <Button
                android:id="@+id/fsm_next_button"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="50dp"
                android:text="Next  >" />
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>
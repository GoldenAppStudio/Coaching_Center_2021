<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Batch">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/x0"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:src="@drawable/teacherteaching" />

    <TextView
        android:id="@+id/x1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x0"
        android:layout_marginTop="15dp"
        android:text="No batch to display"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/x2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/x1"
        android:layout_marginTop="15dp"
        android:text="OR"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@id/x2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="#44C"
        android:text="View free study material"
        android:textColor="#fff" />

    <com.github.clans.fab.FloatingActionButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="65dp"
        android:background="#44f"
        android:src="@drawable/ic_baseline_add_24" />

</RelativeLayout>
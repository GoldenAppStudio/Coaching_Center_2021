<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent" tools:context=".Details">
    <ScrollView android:layout_width="match_parent" android:background="#fff" android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:layout_marginRight="30dp" android:orientation="vertical">
                <LinearLayout android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Class Incharge" android:textColor="#444" android:textSize="13sp"/>
                    <TextView android:layout_marginTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-light" android:id="@+id/mClassIncharge" android:text="N/A" android:textColor="#000" android:textSize="18sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:background="#000"/>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Father's name" android:textColor="#444" android:textSize="13sp"/>
                    <TextView android:layout_marginTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-light" android:id="@+id/mFather" android:text="N/A" android:textColor="#000" android:textSize="18sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:background="#000"/>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Mother's name" android:textColor="#444" android:textSize="13sp"/>
                    <TextView android:layout_marginTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mMother" android:fontFamily="sans-serif-light" android:text="N/A" android:textColor="#000" android:textSize="18sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:background="#000"/>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Address" android:textColor="#444" android:textSize="13sp"/>
                    <TextView android:layout_marginTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:fontFamily="sans-serif-light" android:id="@+id/mAddress" android:text="N/A" android:textColor="#000" android:textSize="18sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:background="#000"/>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Phone" android:textColor="#444" android:textSize="13sp"/>
                    <TextView android:layout_marginTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mPhone" android:fontFamily="sans-serif-light" android:text="N/A" android:textColor="#000" android:textSize="18sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:background="#000"/>
                </LinearLayout>
                <LinearLayout android:layout_marginTop="15dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Date of Birth" android:textColor="#444" android:textSize="13sp"/>
                    <TextView android:layout_marginTop="5dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/mDoB" android:fontFamily="sans-serif-light" android:text="N/A" android:textColor="#000" android:textSize="18sp"/>
                    <View android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="15dp" android:background="#000"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

